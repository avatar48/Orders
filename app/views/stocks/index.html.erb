
<p><a data-open="exampleModal1">Загрузить</a></p>

<div class="reveal" id="exampleModal1" data-reveal>
  <%= render 'download' %>
  <%#= link_to 'close button', '#', :onclick => "$(exampleModal1).foundation('close');", class: "button" %>

  <button class="close-button" data-close aria-label="Close reveal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

    <table class="display responsive no-wrap" cellspacing="0" cellpadding="5" border="1" align="center", id="table_stock">
      <thead>
          <tr>
          <th>Дата</th>
          <th>Номер</th>
          <th>Сумма</th>
          <th>Статус</th>
          <th>Параметры</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @docunemts.each do |docunemt| %>
          <tr>
            <td><%= docunemt.date.strftime("%d.%m.%Y") %></td>
            <td><%= docunemt.number %></td>
            <td><%= docunemt.sum %></td>
            <td><%= send_or_not(docunemt.send_cheker) %></td>
            <td><%= link_to 'Показать', docunemt %></td>
            <td><%= link_to 'Удалить', docunemt, method: :delete, data: {confirm: "Вы уверены что хотите удалить документ перемещение #{docunemt.number}"} %></td>
            <td><%= link_to image_tag('send.png'), send_stock_path(docunemt), method: :post %></td>
          </tr>
        <% end %> 
      </tbody>
  </table>
