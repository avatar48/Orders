  <%= render 'download' %>
  <%#= link_to 'close button', '#', :onclick => "$(exampleModal1).foundation('close');", class: "button" %>

  <button class="close-button" data-close aria-label="Close reveal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
