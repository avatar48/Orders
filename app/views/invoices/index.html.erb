<% content_for :sidebar do %>
  <%= form_tag({:action => :upload_invoice}, :multipart => true ) do %>
  	<%= file_field_tag 'invoice' %>
  	<%= submit_tag("Прочитать", class: "button tiny radius" ) %>
  <% end %>
<% end %>


    <table class="table table-hover">
      <thead>
          <tr>
          <th>Номер</th>
          <th>Дата</th>
          <th>Сумма</th>
          <th>ИНН</th>
          <th>Статус</th>
          <th>Парметры</th>
          <th>Экспорт</th>
          <th>Действие</th>
        </tr>
        <tbody>
          <% @invoices.each do |invoice| %>
            <tr>
              <td>
                <%= invoice.number %>
              </td>
              <td>
                <%= invoice.date.strftime("%d/%m/%Y") %>
              </td>
              <td>
                <%= invoice.sum %>
              </td>
              <td>
                <%= invoice.buyer_inn %>
              </td>
              <td>
                <%= send_or_not(invoice.send_cheker) %>
              </td>
              <td>
                <%=  link_to 'Показать', invoice %>
              </td>
              <td>
              <%= link_to "Excel", invoice_url(invoice, format: "xlsx") %>
              </td>
              <td>
                <%=  link_to 'Отправить', send_invoice_path(invoice), method: :post %>
              </td>
            </tr>
          <% end %> 
        </tbody>
      </thead>

</table>
