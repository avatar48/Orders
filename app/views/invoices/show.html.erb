
<div class="row">
  <div class="large-12 colum panel">
    <table class="table table-hover">
      <thead>
          <tr>
          <th>№ п/п</th>
          <th>Номенклатура</th>
          <th>Количество</th>
          <th>Цена</th>
          <th>Ед.изм.</th>
        </tr>
        <tbody>
          <% @document.invoice_line_items.each_with_index do |lineitem, index| %>
            <tr>
              <td>
                <%= index.next %>
              </td>
              <td>
                <%= lineitem.product_name %>
              </td>
              <td>
                <%= lineitem.quantity %>
              </td>
              <td>
                <%= lineitem.price %>
              </td>
              <td>
                <%= lineitem.unit %>
              </td>
            </tr>
          <% end %> 
        </tbody>
      </thead>

</table>
  </div>